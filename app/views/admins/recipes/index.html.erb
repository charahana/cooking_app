<h2>レシピ一覧</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>投稿者</th>
      <th>投稿日</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.id %></td>
        <td><%= link_to recipe.title, admins_recipe_path(recipe) %></td>
        <td><%= recipe.user&.name || "不明" %></td>
        <td><%= recipe.created_at.strftime("%y/%m/%d") %></td>
        <td><%= link_to "削除", admins_recipe_path(recipe), method: :delete, data: { confirm: "本当に削除しますか？"}, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

