<h2>ユーザー一覧</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>メール</th>
      <th>登録日</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, admins_user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.strftime("%y/%m/%d") %></td>
        <td><%= link_to "削除", admins_user_path(user), method: :delete, data: { confirm: "本当に削除しますか？"}, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "トップへ", admins_root_path, class: "btn btn-outline-primary mt-3" %>