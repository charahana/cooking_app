<div class="container mt-5" style="max-width: 500px;">
  <h2 class="mb-4 text-center">ログイン</h2>

  <%= form_with model: @user, url: user_session_path do |f| %>
    <div class="mt-3">
      <%= f.label :email, class: "form-label fw-bold" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="mt-3">
      <%= f.label :password, class: "form-label fw-bold" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mt-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="d-grid">
      <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>

